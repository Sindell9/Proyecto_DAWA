<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Estados</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger">
                <a class="nav-link link-light" aria-current="page" href="/addestado"> Nuevo Estado</a>
            </button>
        </div>

        {{#if estados}}
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="col-2">ID</th>
                    <th scope="col" class="col-6">Descripción</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each estados}}
                <tr>
                    <td>{{estado_id}}</td>
                    <td>{{descripcion}}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/editestado/{{estado_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>
                            <a href="/deleteestado/{{estado_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="3">REGISTRO DE ESTADOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear un estado</h3>
        </div>
        <div class="card-body">
            <p>Presiona este botón para que puedas registrar un estado en la aplicación</p>
            <a href="/addestado" class="btn btn-primary">Ir a crear</a>
        </div>
    </div>
    {{/if}}
</div>
