<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR ESTADO</h3>
                </div>
                <div class="card-body">
                    <form action="/editestado/{{estado.estado_id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="descripcion" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Descripción del estado"
                                value="{{estado.descripcion}}" autofocus required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/listestado"> Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
